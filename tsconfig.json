{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "declaration": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ES2015"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}